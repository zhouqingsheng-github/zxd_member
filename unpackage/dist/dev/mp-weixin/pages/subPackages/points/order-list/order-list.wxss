
.order-list-page.data-v-b05bd0c4 {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #F5F7FA;
}

/* 导航栏 */
.nav-bar.data-v-b05bd0c4 {
  background: #FFFFFF;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  flex-shrink: 0;
}
.nav-content.data-v-b05bd0c4 {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}
.nav-left.data-v-b05bd0c4,
.nav-right.data-v-b05bd0c4 {
  width: 80rpx;
  display: flex;
  align-items: center;
}
.nav-title.data-v-b05bd0c4 {
  font-size: 32rpx;
  color: #1A1A1A;
  font-weight: 600;
}

/* 分类Tab */
.tabs-section.data-v-b05bd0c4 {
  background: #FFFFFF;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  flex-shrink: 0;
}
.tabs-list.data-v-b05bd0c4 {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 32rpx;
}
.tab-item.data-v-b05bd0c4 {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tab-text.data-v-b05bd0c4 {
  font-size: 28rpx;
  color: #666666;
  white-space: nowrap;
  transition: all 0.3s ease;
  padding-bottom: 12rpx;
}
.tab-text-active.data-v-b05bd0c4 {
  font-size: 32rpx;
  color: #FF7043;
  font-weight: 600;
}
.tab-indicator.data-v-b05bd0c4 {
  width: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #FF7043 0%, #FF5722 100%);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}
.indicator-active.data-v-b05bd0c4 {
  width: 40rpx;
}

/* 滚动容器 */
.scroll-container.data-v-b05bd0c4 {
  flex: 1;
  overflow-y: scroll;
}
.order-list.data-v-b05bd0c4 {
  padding: 24rpx 32rpx 32rpx;
}

/* 加载状态 */
.loading-state.data-v-b05bd0c4 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}
.loading-text.data-v-b05bd0c4 {
  font-size: 26rpx;
  color: #999999;
  margin-top: 24rpx;
}

/* 空状态 */
.empty-state.data-v-b05bd0c4 {
  width: 100%;
  height: 100%;
  min-height: 800rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  box-sizing: border-box;
}
.empty-content.data-v-b05bd0c4 {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.empty-icon-wrapper.data-v-b05bd0c4 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #FFF4F0 0%, #FFE8E0 100%);
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}
.empty-icon.data-v-b05bd0c4 {
  font-size: 120rpx;
  line-height: 1;
}
.empty-text.data-v-b05bd0c4 {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 16rpx;
  font-weight: 500;
}
.empty-tip.data-v-b05bd0c4 {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 48rpx;
}
.go-shopping-btn.data-v-b05bd0c4 {
  width: 280rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #FF7043 0%, #FF5722 100%);
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 112, 67, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-text.data-v-b05bd0c4 {
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
}

/* 加载更多 */
.loadmore-state.data-v-b05bd0c4 {
  padding: 40rpx 0 60rpx;
  display: flex;
  justify-content: center;
}
.loadmore-loading.data-v-b05bd0c4 {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.loadmore-text.data-v-b05bd0c4 {
  font-size: 24rpx;
  color: #999999;
}
.loadmore-end.data-v-b05bd0c4 {
  font-size: 24rpx;
  color: #CCCCCC;
}

